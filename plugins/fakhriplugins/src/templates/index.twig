{% extends "fakhri-plugins/_layouts/base.twig" %}

{% block content %}
  {% set customer = craft.fakhriplugins.getCustomers() %}
  <table class="table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Email</th>
        <th class="px-4 py-2">Total Purchase</th>
        <th class="px-4 py-2">Birthday</th>
      </tr>
    </thead>
    <tbody>
      {% for item in customer %}
      <tr>
        <td class="border px-4 py-2">{{item.name}}</td>
        <td class="border px-4 py-2">{{item.email}}</td>
        <td class="border px-4 py-2">{{item.totalPurchase}}</td>
        <td class="border px-4 py-2">{{item.birthday|dateFilter}}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
